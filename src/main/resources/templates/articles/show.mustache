{{>layouts/header}}
<table class="table">
  <thead>
  <tr>
    <th scope="col">ID</th>
    <th scope="col">Title</th>
    <th scope="col">Content</th>

  </tr>
  </thead>
  <tbody>
  {{#article}}
  <tr>
    <td>{{id}}</td>
    <td>{{title}}</td>
    <td>{{content}}</td>
  </tr>
  {{/article}}
  </tbody>
</table>
<a href="/articles/{{article.id}}/edit" class="btn btn-primary">Edit</a>
